{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departaments\Departaments</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ departament.nombre }}</td>
            </tr>
            <tr>
                <th>Centreid</th>
                <td>{{ departament.centreId }}</td>
            </tr>
            <tr>
                <th>Codigomec</th>
                <td>{{ departament.codigoMec }}</td>
            </tr>
            <tr>
                <th>Centreoficialid</th>
                <td>{{ departament.centreOficialId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('departament_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('departament_edit', { 'id': departament.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
